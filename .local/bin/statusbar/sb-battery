#!/bin/sh

# Prints all batteries, their percentage remaining and an emoji corresponding
# to charge status (ğŸ”Œ for plugged up, ğŸ”‹ for discharging on battery, etc.).

case $BLOCK_BUTTON in
	3) notify-send "ğŸ”‹: discharging
ğŸ›‘: not charging
ğŸ”Œ: charging
âš¡: charged
ğŸª«â—: battery very low!ğŸ’€
- Scroll to adjust screen brightness." ;;
        4) brillo -q -A 10 ;;
        5) brillo -q -U 10 ;;
	6) "$TERMINAL" -e "$EDITOR" "$0" ;;
esac

# acpi alternative
# acpi | sed "s/Battery [0-9]: //;s/[Dd]ischarging, /ğŸ”‹/;s/[Nn]ot charging, /ğŸ›‘/;s/[Cc]harging, /ğŸ”Œ/;s/[Uu]nknown, /â™»ï¸/;s/[Ff]ull, /âš¡/;s/ \(remaining\|until charged\)//"; exit

# Loop through all attached batteries.
for battery in /sys/class/power_supply/BAT?
do
	# Get its remaining capacity and charge status.
	capacity=$(cat "$battery"/capacity 2>/dev/null) || break
	status=$(sed "s/[Dd]ischarging/ğŸ”‹/;s/[Nn]ot charging/ğŸ›‘/;s/[Cc]harging/ğŸ”Œ/;s/[Uu]nknown/â™»ï¸/;s/[Ff]ull/|âš¡/" "$battery"/status)

	# If it is discharging and 25% or less, we will add a â— as a warning.
	 [ "$capacity" -le 98 ] && [ "$status" = "ğŸ”‹" ]

	# If it is discharging and 20% or less, we will add a â— as a warning.
	 [ "$capacity" -l 69 ] && [ "$status" = "ğŸ”‹" ] && warn="ğŸ†" && dunstify -u normal "nice"

	# If it is discharging and 20% or less, we will add a â— as a warning.
	 [ "$capacity" -le 20 ] &&[ "$status" = "ğŸ”‹" ] && warn="ğŸ’€â—"
	 [ "$capacity" -l 20 ] && [ "$status" = "ğŸ”‹" ] && warn="ğŸ’€â—" && dunstify -u normal "Battery is going down!"
	 [ "$capacity" -l 15 ] && [ "$status" = "ğŸ”‹" ] && warn="ğŸ’€â—" && notify-send -t 0 "You have 15% left"

	# If it is discharging and 5% or less, we will add a â— as a warning.
	 [ "$capacity" -le 5 ] && [ "$status" = "ğŸ”‹" ] && warn="ğŸ’€â—ğŸ’€" && dunstify -u critical "You gonna die!"

	printf "%s%s%s%s%% " "$status" "$warn" "$capacity"
    unset warn
done && printf "\\n"
